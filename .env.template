# Copy file này thành .env và điền thông tin thực tế

# OpenAI API Key - BẮT BUỘC
# Lấy tại: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-actual-api-key-here

# Model name - Mặc định: gpt-4o
# Có thể thay đổi: gpt-4o-mini, gpt-4-turbo, v.v.
MODEL_NAME=gpt-4o

# Số lượng messages tối đa lưu trong context
# Giá trị lớn hơn = context dài hơn nhưng tốn token hơn
MAX_CONTEXT_MESSAGES=20

# CORS Origins - Cho phép Frontend kết nối
# Nếu nhiều origins, phân cách bằng dấu phẩy
CORS_ORIGINS=http://localhost:5173
